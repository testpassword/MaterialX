<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0">
    <title>AMD GPU Open</title>
    <link rel="icon" type="image/x-icon" href="public/favicon.png" />
    <link rel="stylesheet" href="public/style.css">
  </head>
  <body style="margin: 0px; overflow: hidden;">
    <div id="container">
      <div style="position: absolute;margin: 10px;">
        <label for="meshes" style="color: white;">Choose a mesh:</label>
        <select name="meshes" id="meshes">
          <% meshes.forEach(function(m) { %>
            <option value="<%-m.value%>"><%-m.name%></option>
          <% }); %>
        </select>
        <br style="margin: 5%"/>
        <label for="environments" style="color: white;">Choose an environment:</label>
        <select name="environments" id="environments">
          <% environments.forEach(function(m) { %>
            <option value="<%-m.value%>"><%-m.name%></option>
          <% }); %>
        </select>
      </div>
      <canvas id="webglcanvas"></canvas>
    </div>
    <script src="JsMaterialXGenShader.js"></script>
    <script src="index.js"></script>
  </body>
</html>